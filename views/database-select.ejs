<!DOCTYPE html>
<html>

<head>
    <title>Select Database</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-blue: #1e3a8a;
            --primary-blue-dark: #1e40af;
            --success: #10b981;
            --neutral-200: #e5e7eb;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .nav {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
        }

        .nav a {
            text-decoration: none;
            color: var(--primary-blue);
            font-weight: 600;
            transition: all 0.3s;
        }

        .nav a:hover {
            color: var(--primary-blue-dark);
        }

        h1 {
            color: #2c3e50;
            margin-bottom: 20px;
            font-size: 32px;
        }

        .success-message {
            background: rgba(16, 185, 129, 0.1);
            color: #065f46;
            padding: 16px 20px;
            border-radius: 12px;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-weight: 600;
            border: 2px solid var(--success);
        }

        .success-message i {
            color: var(--success);
            font-size: 20px;
        }

        .db-info {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 25px;
            border: 2px solid #e1e8ed;
        }

        .db-info strong {
            color: #2c3e50;
            display: block;
            margin-bottom: 10px;
        }

        .db-list {
            display: grid;
            gap: 15px;
            margin-top: 25px;
        }

        .db-item {
            background: white;
            border: 2px solid #e1e8ed;
            padding: 20px;
            border-radius: 15px;
            cursor: pointer;
            transition: all 0.3s;
            position: relative;
        }

        .db-item:hover {
            border-color: var(--primary-blue);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(30, 58, 138, 0.25);
        }

        .db-item.selected {
            border-color: var(--primary-blue);
            background: linear-gradient(135deg, rgba(30, 58, 138, 0.05) 0%, rgba(30, 64, 175, 0.1) 100%);
            box-shadow: 0 8px 20px rgba(30, 58, 138, 0.3);
        }

        .db-item h3 {
            color: #2c3e50;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .db-item p {
            color: #7f8c8d;
            font-size: 14px;
            margin: 5px 0;
        }

        .continue-btn {
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
            color: white;
            padding: 16px 40px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 700;
            margin-top: 25px;
            width: 100%;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(30, 58, 138, 0.4);
        }

        .continue-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(30, 58, 138, 0.6);
        }

        .continue-btn:disabled {
            background: #bdc3c7;
            cursor: not-allowed;
            box-shadow: none;
        }

        .reconfigure-btn {
            display: inline-block;
            background: #ecf0f1;
            color: #2c3e50;
            padding: 12px 25px;
            border-radius: 50px;
            text-decoration: none;
            margin-top: 15px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .reconfigure-btn:hover {
            background: #bdc3c7;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="nav">
            <a href="/"><i class="fas fa-arrow-left"></i> Home</a>
            <div>
                <a href="/profile" style="margin-right: 15px;"><i class="fas fa-user"></i> Profile</a>
                <a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </div>

        <h1><i class="fas fa-database"></i> Select Database</h1>

        <div class="success-message">
            <i class="fas fa-check-circle"></i>
            Successfully connected to <%= dbType.toUpperCase() %>!
        </div>

        <div class="db-info">
            <strong>Connection Details:</strong>
            <p><i class="fas fa-server"></i> Database Type: <%= dbType %>
            </p>
            <% if (host) { %>
                <p><i class="fas fa-network-wired"></i> Host: <%= host %>
                </p>
                <% } %>
        </div>

        <h2 style="color: #2c3e50; margin-bottom: 15px;">Available Databases:</h2>

        <% if (databases && databases.length> 0) { %>
            <form action="/database/select" method="POST">
                <input type="hidden" name="dbType" value="<%= dbType %>">
                <div class="db-list">
                    <% databases.forEach((db)=> { %>
                        <label>
                            <div class="db-item" onclick="selectDatabase(this, '<%= db.name %>')">
                                <input type="radio" name="selectedDatabase" value="<%= db.name %>"
                                    style="display: none;" required>
                                <h3>
                                    <i class="fas fa-table"></i>
                                    <%= db.name %>
                                </h3>
                                <% if (db.tables) { %>
                                    <p><i class="fas fa-list"></i> Tables/Collections: <%= db.tables %>
                                    </p>
                                    <% } %>
                                        <% if (db.size) { %>
                                            <p><i class="fas fa-hdd"></i> Size: <%= db.size %>
                                            </p>
                                            <% } %>
                            </div>
                        </label>
                        <% }); %>
                </div>
                <button type="submit" class="continue-btn" id="continueBtn" disabled>
                    <i class="fas fa-arrow-right"></i> Continue to Query Interface
                </button>
            </form>
            <% } else { %>
                <p style="color: #7f8c8d; text-align: center; padding: 40px;">
                    <i class="fas fa-exclamation-circle"></i> No databases found. Please check your credentials.
                </p>
                <% } %>

                    <center>
                        <a href="/database/config" class="reconfigure-btn">
                            <i class="fas fa-arrow-left"></i> Reconfigure Database
                        </a>
                    </center>
    </div>

    <script>
        function selectDatabase(element, dbName) {
            document.querySelectorAll('.db-item').forEach(item => {
                item.classList.remove('selected');
            });
            element.classList.add('selected');
            element.querySelector('input[type="radio"]').checked = true;
            document.getElementById('continueBtn').disabled = false;
        }
    </script>
</body>

</html>