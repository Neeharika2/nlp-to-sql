    <script>
        // Global variables
        let currentSqlQuery = '';
        let currentNlQuery = '';
        let schemaData = null;
        let currentChart = null;
        let lastQueryResultData = null;
        let suggestedChartType = 'bar';

        // Sidebar toggle
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');
        const sidebarToggle = document.getElementById('sidebarToggle');

        sidebarToggle.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('sidebar-collapsed');
        });

        // Tab switching
        const tabs = document.querySelectorAll('.tab');
        const tabContents = document.querySelectorAll('.tab-content');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tabContents.forEach(tc => tc.classList.remove('active'));

                tab.classList.add('active');
                document.getElementById(tab.dataset.tab + 'Tab').classList.add('active');

                // Handle Chart View tab activation
                if (tab.dataset.tab === 'chart') {
                    handleChartViewActivation();
                } else {
                    // Destroy chart when leaving chart tab to free resources
                    if (currentChart) {
                        currentChart.destroy();
                        currentChart = null;
                    }
                }
            });
        });

        // New query button
        document.getElementById('newQueryBtn').addEventListener('click', (e) => {
            e.preventDefault();
            document.getElementById('nlQuery').value = '';
            document.getElementById('nlQuery').focus();
            document.getElementById('tableResults').innerHTML = '';
            document.getElementById('sqlDisplay').textContent = '';
            currentSqlQuery = '';
            currentNlQuery = '';
        });

        // Query input handling
        const nlQueryInput = document.getElementById('nlQuery');
        const generateBtn = document.getElementById('generateBtn');

        nlQueryInput.addEventListener('input', function () {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });

        // Enter key to generate
        nlQueryInput.addEventListener('keydown', function (e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                generateBtn.click();
            }
        });

        // Main generate button click handler (SINGLE DEFINITION)
        generateBtn.addEventListener('click', async () => {
            const query = nlQueryInput.value.trim();
            if (!query) {
                alert('Please enter a query');
                return;
            }

            currentNlQuery = query;
            nlQueryInput.value = '';
            nlQueryInput.style.height = 'auto';

            generateBtn.disabled = true;
            generateBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';

            try {
                const response = await fetch('/query/execute', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ nlQuery: query })
                });

                if (response.status === 401) {
                    alert('Your session has expired. You will be redirected to the login page.');
                    window.location.href = '/auth/login';
                    return;
                }

                const data = await response.json();

                if (data.success) {
                    currentSqlQuery = data.sqlQuery;

                    // Store query results and suggested chart type
                    lastQueryResultData = data.results || null;
                    suggestedChartType = data.suggestedChartType || 'bar';

                    displayResults(data);
                    await loadQueryHistory(); // Refresh history
                } else {
                    displayError(data.error);
                }
            } catch (error) {
                console.error('Error:', error);
                displayError(error.message);
            } finally {
                generateBtn.disabled = false;
                generateBtn.innerHTML = '<i class="fas fa-magic"></i> Generate & Execute';
            }
        });

        // Display results function
        function displayResults(data) {
            // Update SQL tab
            document.getElementById('sqlDisplay').textContent = data.sqlQuery;

            // Update table tab
            if (data.results && data.results.length > 0) {
                const tableHtml = generateEnhancedTable(data.results);
                document.getElementById('tableResults').innerHTML = tableHtml;
            } else {
                document.getElementById('tableResults').innerHTML = '<p style="text-align: center; padding: 40px; color: #6b7280;">Query executed successfully. No results returned.</p>';
            }

            // Show warnings if any
            if (data.warnings && data.warnings.length > 0) {
                const warningHtml = data.warnings.map(w => `
                    <div class="warning-message">
                        <strong>‚ö†Ô∏è ${w.message}</strong>
                    </div>
                `).join('');
                document.getElementById('tableResults').insertAdjacentHTML('afterbegin', warningHtml);
            }

            // Switch to table tab
            tabs[0].click();
        }

        // Display error function
        function displayError(errorMessage) {
            const errorHtml = `
                <div class="error-message">
                    <strong>‚ùå Error:</strong><br>${escapeHtml(errorMessage)}
                </div>
            `;
            document.getElementById('tableResults').innerHTML = errorHtml;
            tabs[0].click();
        }

        // Generate enhanced table
        function generateEnhancedTable(data) {
            if (!data || data.length === 0) return '<p>No results found.</p>';

            const keys = Object.keys(data[0]);
            const rowCount = data.length;

            let html = `
                <div class="results-table-container">
                    <div class="table-controls">
                        <div class="table-search">
                            <input type="text" placeholder="Search..." id="tableSearch" onkeyup="filterTable()">
                        </div>
                        <div class="table-sort">
                            <select id="tableSort" onchange="sortTable(this.value)">
                                <option value="">Sort by...</option>
                                ${keys.map(key => `<option value="${key}">${escapeHtml(key)}</option>`).join('')}
                            </select>
                        </div>
                    </div>
                    <div class="results-table-wrapper" id="tableWrapper">
                        <table class="results-table" id="resultsTable">
                            <thead>
                                <tr>
                                    ${keys.map(key => `<th data-column="${key}">${escapeHtml(key)}</th>`).join('')}
                                </tr>
                            </thead>
                            <tbody>
                                ${data.map(row => `
                                    <tr>
                                        ${keys.map(key => {
                const value = row[key] !== null && row[key] !== undefined ? row[key] : 'NULL';
                return `<td>${escapeHtml(String(value))}</td>`;
            }).join('')}
                                    </tr>
                                `).join('')}
                            </tbody>
                        </table>
                    </div>
                    <div class="table-footer">
                        <div class="row-count" id="rowCount">
                            üìä ${rowCount} row${rowCount !== 1 ? 's' : ''} returned
                        </div>
                    </div>
                </div>
            `;

            // Add a small delay to check if table content exceeds the max height and add scrollable indicator
            setTimeout(() => {
                const tableWrapper = document.getElementById('tableWrapper');
                const rowCountEl = document.getElementById('rowCount');
                if (tableWrapper && rowCountEl) {
                    if (tableWrapper.scrollHeight > tableWrapper.clientHeight) {
                        rowCountEl.classList.add('scrollable');
                    } else {
                        rowCountEl.classList.remove('scrollable');
                    }
                }
            }, 100);

            return html;
        }

        // Escape HTML helper
        function escapeHtml(text) {
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return String(text).replace(/[&<>"']/g, m => map[m]);
        }

        // Load query history on page load
        // Load query history on page load
        document.addEventListener('DOMContentLoaded', async () => {
            await loadQueryHistory();
            await loadSavedQueries();
            await loadSchemaInfo();
            initializeChartListeners();
        });

        // Load query history
        async function loadQueryHistory() {
            try {
                const response = await fetch('/query/history?limit=10');
                const data = await response.json();

                if (data.success && data.history.length > 0) {
                    const historyContainer = document.getElementById('queryHistory');
                    historyContainer.innerHTML = '';

                    data.history.forEach(query => {
                        const historyItem = document.createElement('div');
                        historyItem.className = 'sidebar-item';
                        historyItem.innerHTML = `
                            <div>
                                <div class="text">${escapeHtml(query.nlQuery.substring(0, 40))}${query.nlQuery.length > 40 ? '...' : ''}</div>
                                <div class="meta">${new Date(query.timestamp).toLocaleString()}</div>
                            </div>
                        `;
                        historyItem.onclick = () => loadHistoryQuery(query);
                        historyContainer.appendChild(historyItem);
                    });
                }
            } catch (error) {
                console.error('Error loading history:', error);
            }
        }

        // Load saved queries
        async function loadSavedQueries() {
            try {
                const response = await fetch('/query/saved');
                const data = await response.json();

                const savedContent = document.getElementById('savedQueriesContent');
                savedContent.innerHTML = '';

                if (data.success && data.queries.length > 0) {
                    data.queries.forEach(query => {
                        const savedItem = document.createElement('div');
                        savedItem.className = 'sidebar-item';
                        savedItem.style.display = 'flex';
                        savedItem.style.alignItems = 'center';
                        savedItem.innerHTML = `
                            <i class="fas fa-bookmark" style="margin-right: 10px;"></i>
                            <div style="flex: 1;">
                                <div class="text">${escapeHtml(query.name)}</div>
                                <div class="meta">${new Date(query.timestamp).toLocaleString()}</div>
                            </div>
                            <i class="fas fa-trash" style="color: #e74c3c; cursor: pointer; padding: 5px;" onclick="event.stopPropagation(); deleteSavedQuery('${query.id}')"></i>
                        `;
                        savedItem.onclick = (e) => {
                            if (!e.target.classList.contains('fa-trash')) {
                                loadSavedQuery(query);
                            }
                        };
                        savedContent.appendChild(savedItem);
                    });
                } else {
                    savedContent.innerHTML = '<div style="padding: 20px; text-align: center; color: #bdc3c7; font-size: 12px;">No saved queries yet</div>';
                }
            } catch (error) {
                console.error('Error loading saved queries:', error);
            }
        }

        // Load schema information
        async function loadSchemaInfo() {
            try {
                const response = await fetch('/query/schema');
                const data = await response.json();

                if (data.success) {
                    schemaData = data.schema;
                    displaySchemaInfo(data.schema);
                }
            } catch (error) {
                console.error('Error loading schema:', error);
            }
        }

        // Display schema info in sidebar
        function displaySchemaInfo(schema) {
            const dbInfoContent = document.getElementById('dbInfoContent');
            dbInfoContent.innerHTML = '';

            if (!schema || schema.length === 0) {
                dbInfoContent.innerHTML = '<div style="padding: 20px; text-align: center; color: #bdc3c7; font-size: 12px;">No schema information</div>';
                return;
            }

            schema.forEach(table => {
                const tableItem = document.createElement('div');
                tableItem.className = 'sidebar-item';
                tableItem.innerHTML = `
                    <i class="fas fa-table"></i>
                    <div>
                        <div class="text">${escapeHtml(table.name)}</div>
                        <div class="meta">${table.columns.length} columns</div>
                    </div>
                `;
                tableItem.onclick = () => showTableDetails(table);
                dbInfoContent.appendChild(tableItem);
            });
        }

        // Show table details
        function showTableDetails(table) {
            const details = table.columns.map(col =>
                `${col.name} (${col.type}) ${col.attributes}`
            ).join('\n');

            alert(`Table: ${table.name}\n\nColumns:\n${details}`);
        }

        // Load query from history
        function loadHistoryQuery(query) {
            document.getElementById('nlQuery').value = query.nlQuery;
            document.getElementById('sqlDisplay').textContent = query.sqlQuery;
            currentSqlQuery = query.sqlQuery;
            currentNlQuery = query.nlQuery;
            tabs[2].click(); // Switch to SQL tab
        }

        // Load saved query
        function loadSavedQuery(query) {
            document.getElementById('nlQuery').value = query.nlQuery;
            document.getElementById('sqlDisplay').textContent = query.sqlQuery;
            currentSqlQuery = query.sqlQuery;
            currentNlQuery = query.nlQuery;
            tabs[2].click(); // Switch to SQL tab
        }

        // Delete saved query
        async function deleteSavedQuery(queryId) {
            if (!confirm('Are you sure you want to delete this saved query?')) {
                return;
            }

            try {
                const response = await fetch(`/query/saved/${queryId}`, {
                    method: 'DELETE'
                });

                const data = await response.json();

                if (data.success) {
                    await loadSavedQueries();
                } else {
                    alert('Failed to delete query');
                }
            } catch (error) {
                console.error('Error deleting query:', error);
                alert('Error deleting query');
            }
        }

        // Save current query
        document.getElementById('saveQueryBtn').addEventListener('click', async (e) => {
            e.preventDefault();
            e.stopPropagation();

            if (!currentSqlQuery || !currentNlQuery) {
                alert('Please execute a query first before saving.');
                return;
            }

            const name = prompt('Enter a name for this query:');
            if (!name || name.trim() === '') return;

            try {
                const response = await fetch('/query/save', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        name: name.trim(),
                        nlQuery: currentNlQuery,
                        sqlQuery: currentSqlQuery
                    })
                });

                const data = await response.json();

                if (data.success) {
                    alert('‚úÖ Query saved successfully!');
                    await loadSavedQueries();
                } else {
                    alert('‚ùå Failed to save query: ' + (data.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error saving query:', error);
                alert('‚ùå Error saving query: ' + error.message);
            }
        });

        // Toggle collapsible sections
        function toggleSection(header) {
            header.classList.toggle('collapsed');
            const content = header.nextElementSibling;
            content.classList.toggle('collapsed');
        }

        // Load suggested query
        function loadSuggestedQuery(query) {
            document.getElementById('nlQuery').value = query;
            document.getElementById('nlQuery').focus();
        }

        // Table search filter
        function filterTable() {
            const input = document.getElementById('tableSearch');
            const filter = input.value.toUpperCase();
            const table = document.getElementById('resultsTable');
            const rowCountEl = document.getElementById('rowCount');

            if (!table) return;

            const tr = table.getElementsByTagName('tr');
            let visibleRows = 0;

            for (let i = 1; i < tr.length; i++) {
                let found = false;
                const td = tr[i].getElementsByTagName('td');

                for (let j = 0; j < td.length; j++) {
                    if (td[j]) {
