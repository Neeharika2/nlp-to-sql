        // Enhanced data analysis and column type inference
        function analyzeDataColumns(data) {
            if (!data || data.length === 0) return { columns: [], types: {} };

            const columns = Object.keys(data[0]);
            const types = {};

            columns.forEach(col => {
                const values = data.map(row => row[col]).filter(val => val !== null && val !== undefined && val !== '');

                if (values.length === 0) {
                    types[col] = 'unknown';
                    return;
                }

                // Check for temporal data
                if (isTemporalColumn(col, values)) {
                    types[col] = 'temporal';
                }
                // Check for numeric data
                else if (values.every(val => !isNaN(parseFloat(val)) && isFinite(val))) {
                    types[col] = 'numeric';
                }
                // Check for boolean data
                else if (values.every(val => val === true || val === false || val === 0 || val === 1 ||
                    val === 'true' || val === 'false' || val === 'yes' || val === 'no')) {
                    types[col] = 'boolean';
                }
                // Otherwise categorical
                else {
                    types[col] = 'categorical';
                }
            });

            return { columns, types };
        }

        function isTemporalColumn(columnName, values) {
            // Check column name patterns
            const temporalPatterns = /\b(date|time|timestamp|year|month|day|created|updated|modified)\b/i;
            if (temporalPatterns.test(columnName)) {
                return true;
            }

            // Check value patterns (sample first few values)
            const sampleValues = values.slice(0, Math.min(5, values.length));
            return sampleValues.every(val => {
                const dateVal = new Date(val);
                return !isNaN(dateVal.getTime()) &&
                    (val.toString().includes('-') || val.toString().includes('/') || val.toString().length === 4);
            });
        }

        // Enhanced chart type suggestion with better logic
        function suggestOptimalChartType(data) {
            const analysis = analyzeDataColumns(data);
            const { types } = analysis;
            const columns = Object.keys(types);

            const numericCols = columns.filter(col => types[col] === 'numeric');
            const categoricalCols = columns.filter(col => types[col] === 'categorical');
            const temporalCols = columns.filter(col => types[col] === 'temporal');
            const booleanCols = columns.filter(col => types[col] === 'boolean');

            // Priority-based suggestion logic

            // Time series data - strongly suggest line chart
            if (temporalCols.length >= 1 && numericCols.length >= 1) {
                return {
                    type: 'line',
                    reason: 'Time-series data detected - line charts show trends over time effectively',
                    suggestedX: temporalCols[0],
                    suggestedY: numericCols[0]
                };
            }

            // Two numeric columns - suggest scatter plot for correlation analysis
            if (numericCols.length >= 2) {
                return {
                    type: 'scatter',
                    reason: 'Multiple numeric columns detected - scatter plot shows correlations',
                    suggestedX: numericCols[0],
                    suggestedY: numericCols[1]
                };
            }

            // Small number of categories - good for pie charts
            if (categoricalCols.length >= 1 && numericCols.length >= 1) {
                const uniqueCategories = new Set(data.map(row => row[categoricalCols[0]])).size;

                if (uniqueCategories <= 6) {
                    return {
                        type: 'pie',
                        reason: `Small number of categories (${uniqueCategories}) - pie chart shows proportions clearly`,
                        suggestedX: categoricalCols[0],
                        suggestedY: numericCols[0]
                    };
                }
            }

            // Boolean data - good for bar charts
            if (booleanCols.length >= 1 && numericCols.length >= 1) {
                return {
                    type: 'bar',
                    reason: 'Boolean/categorical data with numeric values - bar chart shows comparisons well',
                    suggestedX: booleanCols[0],
                    suggestedY: numericCols[0]
                };
            }

            // Default case - categorical with numeric
            if (categoricalCols.length >= 1 && numericCols.length >= 1) {
                return {
                    type: 'bar',
                    reason: 'Categorical data with numeric values - bar chart is most versatile',
                    suggestedX: categoricalCols[0],
                    suggestedY: numericCols[0]
                };
            }

            // Only numeric data
            if (numericCols.length >= 1) {
                return {
                    type: 'bar',
                    reason: 'Numeric data detected - bar chart with row indices',
                    suggestedX: 'Row Index',
                    suggestedY: numericCols[0]
                };
            }

            // Fallback
            return {
                type: 'bar',
                reason: 'Default selection - bar chart is most versatile',
                suggestedX: columns[0],
                suggestedY: columns.length > 1 ? columns[1] : columns[0]
            };
        }

        // Validate chart configuration
        function validateChartConfig(chartType, xColumn, yColumn, data) {
            const errors = [];
            const warnings = [];

            if (!data || data.length === 0) {
                errors.push('No data available for charting');
                return { valid: false, errors, warnings };
            }

            if (!xColumn || !yColumn) {
                errors.push('Both X-axis and Y-axis columns must be selected');
                return { valid: false, errors, warnings };
            }

            const analysis = analyzeDataColumns(data);
            const xType = analysis.types[xColumn];
            const yType = analysis.types[yColumn];

            // Chart-specific validation
            if ((chartType === 'pie' || chartType === 'doughnut') && yType !== 'numeric') {
                errors.push('Pie and doughnut charts require numeric data for the Y-axis');
            }

            if (chartType === 'scatter' && (xType !== 'numeric' || yType !== 'numeric')) {
                errors.push('Scatter plots require numeric data for both axes');
            }

            if (chartType === 'line' && yType !== 'numeric') {
                errors.push('Line charts require numeric data for the Y-axis');
            }

            // Warnings for suboptimal configurations
            if (chartType === 'line' && xType !== 'temporal' && xType !== 'numeric') {
                warnings.push('Line charts work best with temporal or sequential data on the X-axis');
            }

            if ((chartType === 'pie' || chartType === 'doughnut')) {
                const uniqueValues = new Set(data.map(row => row[xColumn])).size;
                if (uniqueValues > 10) {
                    warnings.push(`Too many categories (${uniqueValues}) for pie chart - consider using a bar chart instead`);
                }
            }

            return {
                valid: errors.length === 0,
                errors,
                warnings
            };
        }

