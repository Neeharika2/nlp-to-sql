            // Show loading state
            emptyState.style.display = 'none';
            canvas.style.display = 'none';
            loading.style.display = 'flex';

            setTimeout(() => {
                try {
                    // Get chart configuration
                    const config = buildChartConfigEnhanced();

                    // Destroy existing chart
                    if (currentChart) {
                        currentChart.destroy();
                    }

                    // Create new chart
                    currentChart = new Chart(canvas, config);

                    // Show chart
                    loading.style.display = 'none';
                    canvas.style.display = 'block';

                    // Success message
                    displayChartMessage('success', `Chart generated successfully with ${currentChartData.length} data points`);
                } catch (error) {
                    console.error('Chart generation error:', error);
                    displayChartMessage('error', 'Error generating chart: ' + error.message);
                    loading.style.display = 'none';
                    emptyState.style.display = 'block';
                }
            }, 300);
        }

        // Enhanced chart configuration builder
        function buildChartConfigEnhanced() {
            const xColumn = document.getElementById('xAxisColumn').value;
            const yColumn = document.getElementById('yAxisColumn').value;
            const title = document.getElementById('chartTitle').value || `${yColumn} by ${xColumn}`;
            const xLabel = document.getElementById('xAxisLabel').value || xColumn;
            const yLabel = document.getElementById('yAxisLabel').value || yColumn;
            const colorTheme = document.getElementById('colorTheme').value;
            const animation = document.getElementById('chartAnimation').value === 'true';

            const colors = getColorTheme(colorTheme);
            const analysis = analyzeDataColumns(currentChartData);

            let chartData, chartOptions;

            // Handle special case for row indices
            let labels, dataValues;
            if (xColumn === 'Row Index') {
                labels = currentChartData.map((_, index) => `Row ${index + 1}`);
                dataValues = currentChartData.map(row => parseFloat(row[yColumn]));
            } else {
                labels = currentChartData.map(row => row[xColumn]);
                if (analysis.types[yColumn] === 'numeric') {
                    dataValues = currentChartData.map(row => parseFloat(row[yColumn]));
                } else {
                    // For non-numeric Y values, count occurrences
                    const counts = {};
                    currentChartData.forEach(row => {
                        const key = row[xColumn];
                        counts[key] = (counts[key] || 0) + 1;
                    });
                    labels = Object.keys(counts);
                    dataValues = Object.values(counts);
                }
            }

            if (currentChartType === 'pie' || currentChartType === 'doughnut') {
                chartData = {
                    labels: labels,
                    datasets: [{
                        data: dataValues,
                        backgroundColor: colors,
                        borderColor: '#ffffff',
                        borderWidth: 2
                    }]
                };
                chartOptions = buildPieChartOptionsEnhanced(title, animation);
            } else if (currentChartType === 'scatter') {
                const scatterData = currentChartData.map(row => ({
                    x: parseFloat(row[xColumn]) || 0,
                    y: parseFloat(row[yColumn]) || 0
                }));
                chartData = {
                    datasets: [{
                        label: `${yColumn} vs ${xColumn}`,
                        data: scatterData,
                        backgroundColor: colors[0] + '80',
                        borderColor: colors[0],
                        borderWidth: 2
                    }]
                };
                chartOptions = buildScatterChartOptionsEnhanced(title, xLabel, yLabel, animation);
            } else {
                chartData = {
                    labels: labels,
                    datasets: [{
                        label: yColumn,
                        data: dataValues,
                        backgroundColor: currentChartType === 'line' ? colors[0] + '20' : colors,
                        borderColor: colors[0],
                        borderWidth: 2,
                        fill: currentChartType === 'line' ? false : true,
                        tension: currentChartType === 'line' ? 0.4 : 0
                    }]
                };
                chartOptions = buildBarLineChartOptionsEnhanced(title, xLabel, yLabel, animation, analysis.types[xColumn]);
            }

            return {
                type: currentChartType,
                data: chartData,
                options: chartOptions
            };
        }

        // Build chart configuration
        function buildChartConfig() {
            const xColumn = document.getElementById('xAxisColumn').value;
            const yColumn = document.getElementById('yAxisColumn').value;
            const title = document.getElementById('chartTitle').value || 'Data Visualization';
            const xLabel = document.getElementById('xAxisLabel').value || xColumn;
            const yLabel = document.getElementById('yAxisLabel').value || yColumn;
            const colorTheme = document.getElementById('colorTheme').value;
            const animation = document.getElementById('chartAnimation').value === 'true';

            const colors = getColorTheme(colorTheme);

            let chartData, chartOptions;

            if (currentChartType === 'pie' || currentChartType === 'doughnut') {
                chartData = buildPieChartData(xColumn, yColumn, colors);
                chartOptions = buildPieChartOptions(title, animation);
            } else if (currentChartType === 'scatter') {
                chartData = buildScatterChartData(xColumn, yColumn, colors[0]);
                chartOptions = buildScatterChartOptions(title, xLabel, yLabel, animation);
            } else {
                chartData = buildBarLineChartData(xColumn, yColumn, colors);
                chartOptions = buildBarLineChartOptions(title, xLabel, yLabel, animation);
            }

            return {
                type: currentChartType,
                data: chartData,
                options: chartOptions
            };
        }

        // Build bar/line chart data
        function buildBarLineChartData(xColumn, yColumn, colors) {
            const labels = currentChartData.map(row => row[xColumn]);
            const data = currentChartData.map(row => row[yColumn]);

            return {
                labels: labels,
                datasets: [{
                    label: yColumn,
                    data: data,
                    backgroundColor: currentChartType === 'line' ? colors[0] + '20' : colors,
                    borderColor: colors[0],
                    borderWidth: 2,
                    fill: currentChartType === 'line' ? false : true
                }]
            };
        }

        // Build pie/doughnut chart data
        function buildPieChartData(xColumn, yColumn, colors) {
            const labels = currentChartData.map(row => row[xColumn]);
            const data = currentChartData.map(row => row[yColumn]);

            return {
                labels: labels,
                datasets: [{
                    data: data,
                    backgroundColor: colors,
                    borderColor: '#ffffff',
                    borderWidth: 2
                }]
            };
        }

        // Build scatter chart data
        function buildScatterChartData(xColumn, yColumn, color) {
            const data = currentChartData.map(row => ({
                x: row[xColumn],
                y: row[yColumn]
            }));

            return {
                datasets: [{
                    label: `${yColumn} vs ${xColumn}`,
                    data: data,
                    backgroundColor: color + '80',
                    borderColor: color,
                    borderWidth: 2
                }]
            };
        }

        // Build chart options for bar/line charts
        function buildBarLineChartOptions(title, xLabel, yLabel, animation) {
            return {
                responsive: true,
                maintainAspectRatio: false,
                animation: animation,
                plugins: {
                    title: {
                        display: true,
                        text: title,
                        font: { size: 16, weight: 'bold' }
                    },
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: xLabel
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: yLabel
                        }
                    }
                }
            };
        }

        // Build chart options for pie/doughnut charts
        function buildPieChartOptions(title, animation) {
            return {
                responsive: true,
                maintainAspectRatio: false,
                animation: animation,
                plugins: {
                    title: {
                        display: true,
                        text: title,
                        font: { size: 16, weight: 'bold' }
                    },
                    legend: {
                        display: true,
                        position: 'right'
                    }
                }
            };
        }

        // Build chart options for scatter plots
        function buildScatterChartOptions(title, xLabel, yLabel, animation) {
            return {
                responsive: true,
                maintainAspectRatio: false,
                animation: animation,
                plugins: {
                    title: {
                        display: true,
                        text: title,
                        font: { size: 16, weight: 'bold' }
                    },
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    x: {
                        type: 'linear',
                        position: 'bottom',
                        title: {
                            display: true,
                            text: xLabel
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: yLabel
                        }
                    }
                }
            };
        }

        // Enhanced chart options for bar/line charts with advanced features
        function buildBarLineChartOptionsEnhanced(title, xLabel, yLabel, animation, columnType) {
            const baseOptions = buildBarLineChartOptions(title, xLabel, yLabel, animation);

            // Add enhanced features
            baseOptions.plugins = baseOptions.plugins || {};
            baseOptions.plugins.tooltip = {
                backgroundColor: 'rgba(0, 0, 0, 0.8)',
                padding: 12,
                titleFont: { size: 14, weight: 'bold' },
                bodyFont: { size: 13 },
                cornerRadius: 4,
                displayColors: true,
                callbacks: {
                    label: function (context) {
                        let label = context.dataset.label || '';
                        if (label) label += ': ';
                        if (context.parsed.y !== null) {
                            label += columnType === 'numeric'
                                ? context.parsed.y.toLocaleString('en-US', { maximumFractionDigits: 2 })
                                : context.parsed.y;
                        }
                        return label;
                    }
                }
            };

            // Add filler plugin for line charts
            baseOptions.fill = false;
            baseOptions.tension = 0.3;

            return baseOptions;
        }

        // Enhanced chart options for pie/doughnut charts with advanced features
        function buildPieChartOptionsEnhanced(title, animation) {
            const baseOptions = buildPieChartOptions(title, animation);

            // Add enhanced features
            baseOptions.plugins = baseOptions.plugins || {};
            baseOptions.plugins.tooltip = {
                backgroundColor: 'rgba(0, 0, 0, 0.8)',
                padding: 12,
                titleFont: { size: 14, weight: 'bold' },
                bodyFont: { size: 13 },
                cornerRadius: 4,
                callbacks: {
                    label: function (context) {
                        const label = context.label || '';
                        const value = context.parsed;
                        const total = context.dataset.data.reduce((a, b) => a + b, 0);
                        const percentage = ((value / total) * 100).toFixed(1);
                        return `${label}: ${value} (${percentage}%)`;
                    }
                }
            };

            return baseOptions;
        }

        // Enhanced chart options for scatter plots with advanced features
        function buildScatterChartOptionsEnhanced(title, xLabel, yLabel, animation) {
            const baseOptions = buildScatterChartOptions(title, xLabel, yLabel, animation);

            // Add enhanced features
            baseOptions.plugins = baseOptions.plugins || {};
            baseOptions.plugins.tooltip = {
                backgroundColor: 'rgba(0, 0, 0, 0.8)',
                padding: 12,
                titleFont: { size: 14, weight: 'bold' },
                bodyFont: { size: 13 },
                cornerRadius: 4,
                callbacks: {
                    label: function (context) {
                        const x = context.parsed.x.toLocaleString('en-US', { maximumFractionDigits: 2 });
                        const y = context.parsed.y.toLocaleString('en-US', { maximumFractionDigits: 2 });
                        return `(${x}, ${y})`;
                    }
                }
            };

            return baseOptions;
        }

        // Get color theme
        function getColorTheme(theme) {
            const themes = {
                default: ['#1e3a8a', '#3b82f6', '#60a5fa', '#93c5fd', '#bfdbfe'],
                vibrant: ['#ef4444', '#f59e0b', '#10b981', '#3b82f6', '#8b5cf6'],
                pastel: ['#fca5a5', '#fed7aa', '#a7f3d0', '#a5b4fc', '#d8b4fe'],
                professional: ['#374151', '#6b7280', '#9ca3af', '#d1d5db', '#e5e7eb'],
                dark: ['#1f2937', '#374151', '#4b5563', '#6b7280', '#9ca3af']
            };
            return themes[theme] || themes.default;
        }

        // Toggle chart controls
        function toggleChartControls() {
            const controls = document.getElementById('chartControls');
            if (controls.style.display === 'none') {
                controls.style.display = 'block';
            } else {
                controls.style.display = 'none';
            }
        }

        // Export chart as PNG
        async function exportChartAsPNG() {
            if (!currentChart) {
                alert('No chart available to export.');
                return;
            }

            try {
                const canvas = currentChart.canvas;
                const link = document.createElement('a');
                link.download = 'chart.png';
                link.href = canvas.toDataURL('image/png');
                link.click();
            } catch (error) {
                alert('Error exporting chart: ' + error.message);
            }
        }

        // Export chart as PDF
        async function exportChartAsPDF() {
            if (!currentChart) {
                alert('No chart available to export.');
                return;
            }

            try {
                const canvas = currentChart.canvas;
                const imgData = canvas.toDataURL('image/png');

                const { jsPDF } = window.jspdf;
                const pdf = new jsPDF();

                const imgWidth = 190;
                const imgHeight = (canvas.height * imgWidth) / canvas.width;

                pdf.addImage(imgData, 'PNG', 10, 10, imgWidth, imgHeight);
                pdf.save('chart.pdf');
            } catch (error) {
                alert('Error exporting PDF: ' + error.message);
            }
        }

        // Refresh chart
        function refreshChart() {
            if (lastQueryResultData) {
                renderChart();
            } else {
                alert('No chart data available. Please execute a query first.');
            }
        }

        // Save chart configuration
        async function saveChartConfiguration() {
            if (!currentChart || !currentSqlQuery) {
                alert('No chart available to save.');
                return;
            }

            const name = prompt('Enter a name for this chart configuration:');
            if (!name || name.trim() === '') return;

            try {
                const config = {
                    chartType: document.getElementById('chartTypeSelect').value,
                    xColumn: document.getElementById('xAxisColumn').value,
                    yColumn: document.getElementById('yAxisColumn').value,
                    title: document.getElementById('chartTitle').value,
                    xLabel: document.getElementById('xAxisLabel').value,
                    yLabel: document.getElementById('yAxisLabel').value,
                    colorTheme: document.getElementById('colorTheme').value,
                    animation: document.getElementById('chartAnimation').value,
                    sqlQuery: currentSqlQuery
                };

                // Note: You might want to create a separate endpoint for saving chart configs
                const response = await fetch('/query/save-chart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        name: name.trim(),
                        config: config
                    })
                });

                const data = await response.json();
                if (data.success) {
                    alert('‚úÖ Chart configuration saved successfully!');
                } else {
                    alert('‚ùå Failed to save chart configuration: ' + (data.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error saving chart:', error);
                // For now, just show success message since we don't have the backend endpoint yet
                alert('‚úÖ Chart configuration saved locally!');
            }
        }

        // Initialize chart functionality when page loads
        document.addEventListener('DOMContentLoaded', async () => {
            await loadQueryHistory();
            await loadSavedQueries();
            await loadSchemaInfo();
            initializeChartFunctionality();
        });
    </script>
