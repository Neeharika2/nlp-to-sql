<!DOCTYPE html>
<html>

<head>
    <title>Configure Database</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-blue: #1e3a8a;
            --primary-blue-dark: #1e40af;
            --neutral-50: #f9fafb;
            --neutral-100: #f3f4f6;
            --neutral-200: #e5e7eb;
            --neutral-700: #374151;
            --neutral-800: #1f2937;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .nav {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--neutral-100);
        }

        .nav a {
            text-decoration: none;
            color: var(--primary-blue);
            font-weight: 600;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .nav a:hover {
            color: var(--primary-blue-dark);
        }

        h1 {
            color: var(--neutral-800);
            margin-bottom: 10px;
            font-size: 32px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .subtitle {
            color: var(--neutral-700);
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: var(--neutral-800);
            font-weight: 600;
            font-size: 14px;
        }

        select,
        input[type="text"],
        input[type="password"],
        input[type="number"],
        textarea {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid var(--neutral-200);
            border-radius: 10px;
            font-size: 14px;
            font-family: inherit;
            transition: all 0.3s;
            color: var(--neutral-800);
        }

        select:focus,
        input:focus,
        textarea:focus {
            outline: none;
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 3px rgba(30, 58, 138, 0.1);
        }

        .credential-fields {
            margin-top: 25px;
            padding: 25px;
            background: var(--neutral-50);
            border-radius: 15px;
            border: 2px solid var(--neutral-200);
        }

        .hidden {
            display: none;
        }

        .submit-btn {
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
            color: white;
            padding: 15px 40px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 700;
            margin-top: 25px;
            width: 100%;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(30, 58, 138, 0.4);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(30, 58, 138, 0.6);
        }

        .info-text {
            color: var(--neutral-700);
            font-size: 12px;
            margin-top: 5px;
        }

        .db-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
            border-radius: 10px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="nav">
            <a href="/"><i class="fas fa-arrow-left"></i> Home</a>
            <div>
                <a href="/profile"><i class="fas fa-user"></i> Profile</a>
                <a href="/auth/logout" style="margin-left: 15px;"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </div>

        <h1>
            <span class="db-icon"><i class="fas fa-database"></i></span>
            Configure Database
        </h1>
        <p class="subtitle">Connect to your database to start querying with natural language</p>

        <form action="/database/configure" method="POST">
            <div class="form-group">
                <label for="dbType">Select Database Type:</label>
                <select id="dbType" name="dbType" required onchange="updateCredentialFields()">
                    <option value="">-- Select Database --</option>
                    <option value="mysql">MySQL</option>
                    <option value="postgresql">PostgreSQL</option>
                    <option value="mssql">Microsoft SQL Server</option>
                    <option value="mongodb">MongoDB</option>
                    <option value="mongodb-atlas">MongoDB Atlas (Cloud)</option>
                    <option value="firebase">Firebase</option>
                    <option value="supabase">Supabase</option>
                    <option value="aws-rds">AWS RDS</option>
                    <option value="digitalocean">DigitalOcean Managed Database</option>
                </select>
            </div>

            <!-- MySQL / PostgreSQL / MSSQL Fields -->
            <div id="sql-fields" class="credential-fields hidden">
                <div class="form-group">
                    <label for="host">Host:</label>
                    <input type="text" id="sql-host" name="host" placeholder="localhost">
                    <p class="info-text">Database server address</p>
                </div>
                <div class="form-group">
                    <label for="port">Port:</label>
                    <input type="number" id="sql-port" name="port" placeholder="3306">
                </div>
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" id="sql-username" name="username">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="sql-password" name="password">
                </div>
                <div class="form-group">
                    <label for="database">Database Name (Optional):</label>
                    <input type="text" id="sql-database" name="database"
                        placeholder="Leave empty to list all databases">
                </div>
            </div>

            <!-- MongoDB Local Fields -->
            <div id="mongodb-fields" class="credential-fields hidden">
                <div class="form-group">
                    <label for="mongo-host">Host:</label>
                    <input type="text" id="mongo-host" name="host" placeholder="localhost">
                </div>
                <div class="form-group">
                    <label for="mongo-port">Port:</label>
                    <input type="number" id="mongo-port" name="port" placeholder="27017">
                </div>
                <div class="form-group">
                    <label for="mongo-username">Username (Optional):</label>
                    <input type="text" id="mongo-username" name="username">
                </div>
                <div class="form-group">
                    <label for="mongo-password">Password (Optional):</label>
                    <input type="password" id="mongo-password" name="password">
                </div>
                <div class="form-group">
                    <label for="mongo-database">Database Name (Optional):</label>
                    <input type="text" id="mongo-database" name="database">
                </div>
            </div>

            <!-- MongoDB Atlas Fields -->
            <div id="mongodb-atlas-fields" class="credential-fields hidden">
                <div class="form-group">
                    <label for="atlas-connection-string">Connection String:</label>
                    <input type="text" id="atlas-connection-string" name="connectionString"
                        placeholder="mongodb+srv://username:password@cluster.mongodb.net/">
                    <p class="info-text">Get this from MongoDB Atlas dashboard</p>
                </div>
            </div>

            <!-- Firebase Fields -->
            <div id="firebase-fields" class="credential-fields hidden">
                <div class="form-group">
                    <label for="firebase-project-id">Project ID:</label>
                    <input type="text" id="firebase-project-id" name="projectId">
                </div>
                <div class="form-group">
                    <label for="firebase-service-account">Service Account JSON:</label>
                    <textarea id="firebase-service-account" name="serviceAccount" rows="6"
                        style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;"
                        placeholder='Paste your Firebase service account JSON here'></textarea>
                    <p class="info-text">Download from Firebase Console → Project Settings → Service Accounts</p>
                </div>
            </div>

            <!-- Supabase Fields -->
            <div id="supabase-fields" class="credential-fields hidden">
                <div class="form-group">
                    <label for="supabase-url">Supabase URL:</label>
                    <input type="text" id="supabase-url" name="supabaseUrl" placeholder="https://xxxxx.supabase.co">
                </div>
                <div class="form-group">
                    <label for="supabase-key">Supabase Anon/Service Key:</label>
                    <input type="password" id="supabase-key" name="supabaseKey">
                    <p class="info-text">Get from Supabase Dashboard → Settings → API</p>
                </div>
                <div class="form-group">
                    <label for="supabase-password">Database Password (Optional for direct access):</label>
                    <input type="password" id="supabase-password" name="supabasePassword">
                    <p class="info-text">Only needed for direct PostgreSQL access</p>
                </div>
            </div>

            <!-- AWS RDS Fields -->
            <div id="aws-rds-fields" class="credential-fields hidden">
                <div class="form-group">
                    <label for="aws-engine">Database Engine:</label>
                    <select id="aws-engine" name="awsEngine">
                        <option value="mysql">MySQL</option>
                        <option value="postgresql">PostgreSQL</option>
                        <option value="mssql">SQL Server</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="aws-endpoint">RDS Endpoint:</label>
                    <input type="text" id="aws-endpoint" name="endpoint"
                        placeholder="mydb.123456789.us-east-1.rds.amazonaws.com">
                </div>
                <div class="form-group">
                    <label for="aws-port">Port:</label>
                    <input type="number" id="aws-port" name="port" placeholder="3306">
                </div>
                <div class="form-group">
                    <label for="aws-username">Master Username:</label>
                    <input type="text" id="aws-username" name="username">
                </div>
                <div class="form-group">
                    <label for="aws-password">Master Password:</label>
                    <input type="password" id="aws-password" name="password">
                </div>
                <div class="form-group">
                    <label for="aws-database">Database Name (Optional):</label>
                    <input type="text" id="aws-database" name="database">
                </div>
            </div>

            <!-- DigitalOcean Fields -->
            <div id="digitalocean-fields" class="credential-fields hidden">
                <div class="form-group">
                    <label for="do-engine">Database Engine:</label>
                    <select id="do-engine" name="doEngine">
                        <option value="mysql">MySQL</option>
                        <option value="postgresql">PostgreSQL</option>
                        <option value="mongodb">MongoDB</option>
                        <option value="redis">Redis</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="do-host">Host:</label>
                    <input type="text" id="do-host" name="host"
                        placeholder="db-mysql-nyc1-12345-do-user-1234567-0.b.db.ondigitalocean.com">
                    <p class="info-text">Get from DigitalOcean Dashboard → Databases → Connection Details</p>
                </div>
                <div class="form-group">
                    <label for="do-port">Port:</label>
                    <input type="number" id="do-port" name="port" placeholder="25060">
                </div>
                <div class="form-group">
                    <label for="do-username">Username:</label>
                    <input type="text" id="do-username" name="username" placeholder="doadmin">
                </div>
                <div class="form-group">
                    <label for="do-password">Password:</label>
                    <input type="password" id="do-password" name="password">
                    <p class="info-text">Found in Connection Details section</p>
                </div>
                <div class="form-group">
                    <label for="do-database">Database Name (Optional):</label>
                    <input type="text" id="do-database" name="database" placeholder="defaultdb">
                </div>
                <div class="form-group">
                    <label>
                        <input type="checkbox" id="do-ssl" name="sslRequired" value="true" checked>
                        Require SSL Connection (Recommended)
                    </label>
                </div>
            </div>

            <button type="submit" class="submit-btn">
                <i class="fas fa-plug"></i> Connect & Scan Databases
            </button>
        </form>
    </div>

    <script>
        function updateCredentialFields() {
            const dbType = document.getElementById('dbType').value;
            const allFields = document.querySelectorAll('.credential-fields');

            // Hide all fields first and disable inputs
            allFields.forEach(field => {
                field.classList.add('hidden');
                const inputs = field.querySelectorAll('input, textarea, select');
                inputs.forEach(input => {
                    input.disabled = true;
                    input.removeAttribute('required');
                });
            });

            // Show relevant fields based on selection and enable inputs
            let activeFieldId = '';
            switch (dbType) {
                case 'mysql':
                    activeFieldId = 'sql-fields';
                    document.getElementById('sql-port').value = '3306';
                    break;
                case 'postgresql':
                    activeFieldId = 'sql-fields';
                    document.getElementById('sql-port').value = '5432';
                    break;
                case 'mssql':
                    activeFieldId = 'sql-fields';
                    document.getElementById('sql-port').value = '1433';
                    break;
                case 'mongodb':
                    activeFieldId = 'mongodb-fields';
                    break;
                case 'mongodb-atlas':
                    activeFieldId = 'mongodb-atlas-fields';
                    break;
                case 'firebase':
                    activeFieldId = 'firebase-fields';
                    break;
                case 'supabase':
                    activeFieldId = 'supabase-fields';
                    break;
                case 'aws-rds':
                    activeFieldId = 'aws-rds-fields';
                    break;
                case 'digitalocean':
                    activeFieldId = 'digitalocean-fields';
                    document.getElementById('do-port').value = '25060';
                    break;
            }

            // Enable the active field
            if (activeFieldId) {
                const activeField = document.getElementById(activeFieldId);
                activeField.classList.remove('hidden');
                const inputs = activeField.querySelectorAll('input:not([type="checkbox"]), textarea, select');
                inputs.forEach(input => {
                    input.disabled = false;
                    // Add required attribute to critical fields
                    if (input.id.includes('host') || input.id.includes('username') ||
                        input.id.includes('password') || input.id.includes('connection') ||
                        input.id.includes('url') || input.id.includes('key') ||
                        input.id.includes('project') || input.id.includes('endpoint')) {
                        input.setAttribute('required', 'required');
                    }
                });
            }
        }
    </script>
</body>

</html>